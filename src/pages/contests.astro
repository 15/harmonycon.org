---
import { Image, getImage } from "astro:assets";
import Layout from "../layouts/Layout.astro";

import cocBackground from "../assets/2025/bg/stage3.png";
const optimizedCocBackground = await getImage({
  src: cocBackground,
  format: "avif",
  width: 2000,
});

import Footer from "../components/Footer.astro";
import posterTalents from "@assets/2025/talents/talents-show.jpg";
import posterCosplay from "@assets/2025/talents/cosplay-contest.jpg";

const talentsForm = "https://docs.google.com/forms/d/e/1FAIpQLSf3bq1NrvIJzASghVQUabq8yM1YV8MCzEeyAHvzTOfv1lMnVQ/viewform";
const cosplayForm = "https://docs.google.com/forms/d/e/1FAIpQLSdXJ5kz5v_TAeqCR-aUmpDGnRN9VaOL2WVINuH_75atpinuBA/viewform";

const gameFormSmash = "https://challonge.com/HCSmash2025";
const gameFormMariokart = "https://challonge.com/HCKart2025";
const gameFormStreetfighter = "https://challonge.com/HCSF52025";
const gameFormGoldeneye = "https://challonge.com/HCGE642025";
const gameFormHalo = "https://challonge.com/HCHalo32025";
const gameFormMortalkombat = "https://challonge.com/HCMK112025";

---

<Layout title="HarmonyCon 2025 | Talents Show">
  <div id="bg" class="flex flex-col justify-between">
    <div class="flex flex-col items-center justify-center my-auto gap-y-12">
      <div class="flex flex-col">
        <h2 class="text-yellow-200 text-4xl sm:text-5xl md:text-6xl uppercase font-serif text-center">Talents and Cosplay</h2>
        <div class="flex flex-col md:flex-row mt-8">
          <div
            class="p-1 bg-white border-8 border-black w-84 lg:w-120 xl:w-144 -rotate-3 rounded-lg drop-shadow-2xl hover:z-10"
          >
            <a href={talentsForm} target="_blank" rel="noopener noreferrer">
              <Image
                src={posterTalents}
                alt="Hyatt Regency Pegasus Ballroom"
                width={800}
                format="avif"
                class="w-full"
              />
            </a>
          </div>
          <div
            class="p-1 bg-white border-8 border-black md:my-0 -my-16 sm:-my-12 mx-0 w-84 lg:w-120 xl:w-144 rotate-6 rounded-lg drop-shadow-2xl hover:z-10"
          >
            <a href={cosplayForm} target="_blank" rel="noopener noreferrer">
              <Image
                src={posterCosplay}
                alt="Hyatt Regency Cumberland Hall"
                width={800}
                format="avif"
                class="w-full"
              />
            </a>
          </div>
        </div>
      </div>
      <div class="mt-12">
        <h2 class="text-yellow-200 text-4xl my-4 sm:text-5xl md:text-6xl uppercase font-serif text-center">Game Tournaments</h2>
        <div class="flex flex-col items-center gap-y-4 mt-6">
          <a href={gameFormSmash} target="_blank" rel="noopener noreferrer"
             class="active bg-yellow-200 hover:bg-yellow-300 border-amber-500 border-4 duration-300 md:py-2 md:px-8 py-1 px-4 rounded text-black w-auto text-2xl md:text-3xl font-serif"
          >
            üí• SUPER SMASH BROS ULTIMATE
            <span class="bg-yellow-500 rounded p-1">üèÜ</span>
          </a>
          <a href={gameFormMariokart} target="_blank" rel="noopener noreferrer"
             class="active bg-yellow-200 hover:bg-yellow-300  border-amber-500 border-4 duration-300 md:py-2 md:px-8 py-1 px-4 rounded text-black w-auto text-2xl md:text-3xl font-serif"
          >
            üèéÔ∏è MARIO KART
            <span class="bg-yellow-500 rounded p-1">üèÜ</span>
          </a>
          <a href={gameFormStreetfighter} target="_blank" rel="noopener noreferrer"
             class="active bg-yellow-200 hover:bg-yellow-300 duration-300 md:py-2 md:px-8 py-1 px-4 rounded text-black w-auto text-2xl md:text-3xl font-serif"
          >
            ü•ä STREET FIGHTER 5
          </a>
          <a href={gameFormGoldeneye} target="_blank" rel="noopener noreferrer"
             class="active bg-yellow-200 hover:bg-yellow-300 duration-300 md:py-2 md:px-8 py-1 px-4 rounded text-black w-auto text-2xl md:text-3xl font-serif"
          >
            üî´ GOLDENEYE 64
          </a>
          <a href={gameFormHalo} target="_blank" rel="noopener noreferrer"
             class="active bg-yellow-200 hover:bg-yellow-300 duration-300 md:py-2 md:px-8 py-1 px-4 rounded text-black w-auto text-2xl md:text-3xl font-serif"
          >
            üëæ HALO 3
          </a>
          <a href={gameFormMortalkombat} target="_blank" rel="noopener noreferrer"
             class="active bg-yellow-200 hover:bg-yellow-300 duration-300 md:py-2 md:px-8 py-1 px-4 rounded text-black w-auto text-2xl md:text-3xl font-serif"
          >
            ü¶Ç MORTAL KOMBAT 11
          </a>
        </div>
      </div>
    </div>
    <Footer />
  </div>

  <style
    define:vars={{
      optimizedCocBackground: `url(${optimizedCocBackground.src})`,
    }}
  >
    .active {
      --a: 0deg; /* control the angle of rotation (the smaller, the better) */
      transform: perspective(100px)
        rotate3d(var(--r, 1, -1), 0, calc(var(--i, 1) * var(--a)));
      -webkit-mask: linear-gradient(135deg, #000c 40%, #000, #000c 60%) 100% 0%/250%
        250%;
      transition: 0.4s;
      /* animation:
      jump 1.2s cubic-bezier(0.77, 0.01, 0.25, 1) 2s forwards,
      rotating 4s var(--sine) 0s infinite forwards; */

      z-index: 50;
    }

    .active:hover {
      --i: -1;
      -webkit-mask-position: 0 0;
    }
    :root {
      --elastic: linear(
        0,
        0.0009 8.51%,
        -0.0047 19.22%,
        0.0016 22.39%,
        0.023 27.81%,
        0.0237 30.08%,
        0.0144 31.81%,
        -0.0051 33.48%,
        -0.1116 39.25%,
        -0.1181 40.59%,
        -0.1058 41.79%,
        -0.0455,
        0.0701 45.34%,
        0.9702 55.19%,
        1.0696 56.97%,
        1.0987 57.88%,
        1.1146 58.82%,
        1.1181 59.83%,
        1.1092 60.95%,
        1.0057 66.48%,
        0.986 68.14%,
        0.9765 69.84%,
        0.9769 72.16%,
        0.9984 77.61%,
        1.0047 80.79%,
        0.9991 91.48%,
        1
      );

      --sine: linear(
        0,
        0.007 5.35%,
        0.0282 10.75%,
        0.0638 16.26%,
        0.1144 21.96%,
        0.1833 28.16%,
        0.2717 34.9%,
        0.6868 62.19%,
        0.775 68.54%,
        0.8457 74.3%,
        0.9141 81.07%,
        0.9621 87.52%,
        0.9905 93.8%,
        1
      );
    }
    #bg {
      position: absolute;

      top: 0;
      left: 0;
      width: 100%;
      height: auto;
      min-height: 100%;
      background-image: var(--optimizedCocBackground);
      background-repeat: no-repeat;
      background-size: cover;
      background-position: center;
      opacity: 1;
    }
  </style>
</Layout>
