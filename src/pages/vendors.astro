      filter: drop-shadow(0 50px 50px #000);
      outline: none;
      background: rgba(0, 0, 0, 0.85);
      backdrop-filter: blur(10px);
      border: 1px solid rgba(255, 255, 255, 0.1);
      max-height: 90vh;
      max-width: 90vw;
    }

    dialog > div {
