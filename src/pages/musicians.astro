---
import { Image, getImage } from "astro:assets";
import Layout from "../layouts/Layout.astro";

import cocBackground from "../assets/2025/bg/curtain_full.png";
const optimizedCocBackground = await getImage({
  src: cocBackground,
  format: "avif",
  width: 2000,
});

import coltchella from "../assets/2025/musicians/coltchella_sign.png";
import six from "../assets/2025/musicians/image0040.png";

import musician1 from "../assets/2025/musicians/pitcrew.png";
import musician2 from "../assets/2025/musicians/maerstrom.png";
import musician3 from "../assets/2025/musicians/manehattanjazzquartet.jpg";
import musician4 from "../assets/2025/musicians/wonderbolts.png";
import musician5 from "../assets/2025/musicians/mylittleromance.png";
import musician6 from "../assets/2025/musicians/loophoof.png";
import musician7 from "../assets/2025/musicians/starcrush.png";
import musician8 from "../assets/2025/musicians/colorbynumber.png";
import musician9 from "../assets/2025/musicians/azure.png";
import musician10 from "../assets/2025/musicians/metajoker.jpg";
import musician11 from "../assets/2025/musicians/4efb.png";
import musician12 from "../assets/2025/musicians/kenza.png";
import musician13 from "../assets/2025/musicians/ponyhousemafia.png";
import musician14 from "../assets/2025/musicians/dbpony.png";

import Album from "../components/Album.astro";
import Footer from "../components/Footer.astro";
---

<Layout title="HarmonyCon 2025 | Venue">
  <div id="bg" class="flex flex-col justify-between">
    <div class="flex w-full justify-center">
      <Image
        src={coltchella}
        format="avif"
        height={400}
        alt="Coltchella 6"
        class="bg-transparent rounded-none md:w-full xl:w-1/2 w-auto"
      />
    </div>
    <div class="px-4 grid grid-cols-2 md:grid-cols-4 items-center justify-center w-full xl:w-[80rem] gap-8 mx-auto mb-24 relative">
      <Album
        src={musician1}
        alt="Pit Crew"
        time="Friday, 7:00-7:30pm"
      />
      <Album
        src={musician2}
        alt="Maerstrom"
        time="Friday, 7:30-8:30pm"
      />
      <Album
        src={musician11}
        alt="4everfreebrony x Luna Jax"
        time="Friday, 8:30-9:15am"
      />
      <Album
        src={musician5}
        alt="My Little Romance"
        time="Friday, 9:15-10:15pm"
      />
      <Album
        src={musician9}
        alt="Azure Comet"
        time="Friday, 10:30-11:15pm"
      />
      <div class="hidden md:block"></div>
      <div class="hidden md:block"></div>
      <Album
        src={musician13}
        alt="Pony House Mafia"
        time="Friday, 11:15pm-12:15am"
      />
      <Album
        src={musician6}
        alt="loophoof"
        time="Friday, 12:15-12:45am"
        />
        <div class="hidden md:block"></div>
        <div class="hidden md:block"></div>
      <Album
        src={musician3}
        alt="Manehattan Jazz Quartet"
        time="Saturday, 7:00-7:45pm"
      />
      <Album
      src={musician10}
      alt="Metajoker"
      time="Saturday, 7:45-8:30pm"
      />
      <div class="hidden md:block"></div>
      <div class="hidden md:block"></div>

      <Album
        src={musician14}
        alt="dBPony"
        time="Saturday, 8:30-9:00pm"
      />

      <Album
        src={musician4}
        alt="The Wonderbolts"
        time="Saturday, 9:00-10:00pm"
      />

      <Album
        src={musician8}
        alt="Color by Number"
        time="Saturday, 10:30-11:15pm"
      />
      <Album
        src={musician7}
        alt="Starcrush!"
        time="Saturday, 11:15pm-12:00am"
      />
        <Album
        src={musician12}
        alt="Faulty x Kenza Koa"
        time="Saturday, 12:00-1:00am"
        />

      <div class="hidden md:block absolute w-full left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2">
        <Image
          src={six}
          format="avif"
          alt="Six"
          class="bg-transparent lg:w-full"
        />
      </div>
  </div>
  <Footer />

  <style
    define:vars={{
      optimizedCocBackground: `url(${optimizedCocBackground.src})`,
    }}
  >
    .active {
      --a: 0deg; /* control the angle of rotation (the smaller, the better) */
      transform: perspective(100px)
        rotate3d(var(--r, 1, -1), 0, calc(var(--i, 1) * var(--a)));
      -webkit-mask: linear-gradient(135deg, #000c 40%, #000, #000c 60%) 100% 0%/250%
        250%;
      transition: 0.4s;
      /* animation:
      jump 1.2s cubic-bezier(0.77, 0.01, 0.25, 1) 2s forwards,
      rotating 4s var(--sine) 0s infinite forwards; */

      z-index: 50;
    }

    .active:hover {
      --i: -1;
      -webkit-mask-position: 0 0;
    }
    :root {
      --elastic: linear(
        0,
        0.0009 8.51%,
        -0.0047 19.22%,
        0.0016 22.39%,
        0.023 27.81%,
        0.0237 30.08%,
        0.0144 31.81%,
        -0.0051 33.48%,
        -0.1116 39.25%,
        -0.1181 40.59%,
        -0.1058 41.79%,
        -0.0455,
        0.0701 45.34%,
        0.9702 55.19%,
        1.0696 56.97%,
        1.0987 57.88%,
        1.1146 58.82%,
        1.1181 59.83%,
        1.1092 60.95%,
        1.0057 66.48%,
        0.986 68.14%,
        0.9765 69.84%,
        0.9769 72.16%,
        0.9984 77.61%,
        1.0047 80.79%,
        0.9991 91.48%,
        1
      );

      --sine: linear(
        0,
        0.007 5.35%,
        0.0282 10.75%,
        0.0638 16.26%,
        0.1144 21.96%,
        0.1833 28.16%,
        0.2717 34.9%,
        0.6868 62.19%,
        0.775 68.54%,
        0.8457 74.3%,
        0.9141 81.07%,
        0.9621 87.52%,
        0.9905 93.8%,
        1
      );
    }
    #bg {
      position: absolute;

      top: 0;
      left: 0;
      width: 100%;
      height: auto;
      min-height: 100%;
      background-image: var(--optimizedCocBackground);
      background-repeat: no-repeat;
      background-size: cover;
      background-position: center;
      opacity: 1;
    }

    .card1 {
      animation:
      /* reveal 0.7s cubic-bezier(0.5, 0.1, 0.1, 1) 0.6s forwards,
      zoom 0.75s ease-out 0.6s forwards, */ floating1
        4s var(--sine) 0s infinite forwards;
    }

    .card2 {
      animation:
      /* reveal 0.7s cubic-bezier(0.5, 0.1, 0.1, 1) 0.8s forwards,
      zoom 0.75s ease-out 0.9s forwards, */ floating2
        5s var(--sine) 0.4s infinite forwards;
    }

    .card3 {
      animation:
      /* reveal 0.7s cubic-bezier(0.5, 0.1, 0.1, 1) 1s forwards,
      zoom 0.75s ease-out 1.2s forwards, */ floating3
        4.5s var(--sine) 0.8s infinite forwards;
    }

    @keyframes reveal {
      from {
        /* bottom: -150vh; */
        opacity: 1;
        transform: translateY(-300%);
      }
      to {
        opacity: 1;
        transform: translateY(0%);
      }
    }
    @keyframes zoom {
      from {
        rotate: 10deg;
        scale: 1;
      }
      to {
        rotate: -0.3deg;
        scale: 1;
      }
    }

    @keyframes floating1 {
      0% {
        translate: 0px 0px;
      }
      50% {
        translate: 0px 6px;
      }
      100% {
        translate: 0px 0px;
      }
    }

    @keyframes floating2 {
      0% {
        translate: 0px 0px;
      }
      50% {
        translate: 0px -6px;
      }
      100% {
        translate: 0px 0px;
      }
    }

    @keyframes floating3 {
      0% {
        translate: 0px 0px;
      }
      50% {
        translate: 0px 5px;
      }
      100% {
        translate: 0px 0px;
      }
    }
  </style>
</Layout>
