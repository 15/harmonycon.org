  <style
    define:vars={{
      optimizedCocBackground: `url(${optimizedCocBackground.src})`,
    }}
  >
  
    @media (min-width: 1024px) {
    #bg {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: auto;
      min-height: 100%;
      background-image: var(--optimizedCocBackground);
      background-repeat: repeat;
      background-size: 20%;
      background-position: center;
      opacity: 1;
    }
  }

  @media (max-width: 1024px) {
    #bg {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: auto;
      min-height: 100%;
      background-image: var(--optimizedCocBackground);
      background-repeat: repeat;
      background-size: 50%;
      background-position: center;
      opacity: 1;
    }
  }

