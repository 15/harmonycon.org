<Layout title="HarmonyCon 2025">
  <div id="bg" class="overflow-x-hidden overflow-y-hidden">
    <div id="curtains">
      <div id="curtain-1"></div>
      <div id="curtain-2"></div>
    </div>
    <a href="https://event.pony.town/" target="_blank" style="text-shadow: 3px 3px 1px #000; visibility: hidden;" class="whitespace-nowrap text-center ponytown absolute top-12 md:top-16 left-1/2 transform -translate-x-1/2 h-auto z-[100] font-serif text-yellow-400 text-xl md:text-4xl xl:text-5xl px-8 py-4 rounded-xl">
      HARMONYCON 2025 IS LIVE NOW!<br/>Click here to join our Pony Town event!<br/>
      <!-- <span class="text-base md:text-2xl xl:text-3xl"><span>Live attendee count: 1157 (as of 11:48 am)</span> -->
    </a>
    <div class="mascots">
      <Image
        id="tune"
        alt="Harmonic Tune"
        format="avif"
        src={img1}
        width={600}
        style="filter: drop-shadow(0 10px 10px #000);"
      />
      <Image
        id="star"
        alt="Harmony Star"
        format="avif"
        src={img2}
        width={600}
        style="filter: drop-shadow(0 10px 10px #000);"
      />
    </div>
    <Image
      id="logo"
      alt="HarmonyCon 2025 logo"
      format="avif"
      src={img3}
      width={1000}
      style="filter: drop-shadow(0 10px 10px #000);"
      class="z-10"
    />
    <div id="buttons">
      <a href="/register">
        <Image
          id="register"
          style="filter: drop-shadow(0 2px 2px #000);"
          alt="Register!"
          format="avif"
          src={img4}
          width={200}
        />
      </a>
      <a href="/main">
        <Image
          id="main"
          style="filter: drop-shadow(0 2px 2px #000);"
          alt="Enter!"
          format="avif"
          src={img5}
          width={200}
        />
      </a>
    </div>
  </div>

  <Footer />
</Layout>

<script>
  document.addEventListener("swup:enable", () => {
    window.swup.hooks.on("page:view", () => {
      const curtain1 = document.getElementById("curtain-1");
      const curtain2 = document.getElementById("curtain-2");
      if (curtain1) {
        curtain1.className = "skip";
