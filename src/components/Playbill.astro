---
import { Image } from "astro:assets";
const { src, href, active, title = "Ponybill" } = Astro.props;
---

<a
  style="filter: drop-shadow(0 3px 3px #000);"
  class={`playbill border-black bg-white rounded-sm p-1 border-[20px] sm:border-[16px] md:border-[20px] lg:border-[20px] xl:border-[24px] w-full items-center flex flex-col gap-y-1 lg:gap-y-2 duration-300 ${active ? "grayscale-0 cursor-pointer" : "grayscale cursor-not-allowed"}  hover:z-10 relative`}
  href={active ? href : ""}
  draggable={false}
>
  <div
    style="filter: drop-shadow(0 1px 1px #000);"
    class={`w-full sm:w-full md:w-64 lg:w-72 xl:w-80 5xl:w-120 relative flex flex-col rounded ${active ? "grayscale-0" : "grayscale"}`}
  >
    <div
      class="text-black bg-[#fde300] pt-0 md:pt-2 2xl:pt-0 w-full h-20 sm:h-20 md:h-20 lg:h-24 font-serif uppercase flex items-center justify-center text-4.5xl sm:text-4xl md:text-4xl lg:text-4.5xl 2xl:text-4.5xl"
    >
      {title}
    </div>
    <Image
      draggable={false}
      src={src}
      width="300"
      alt=""
      format="avif"
      class="w-full sm:w-full md:w-64 lg:w-72 xl:w-80 5xl:w-120 aspect-[4/5] object-cover object-center"
    />
    <div
      class="bg-[#fde300] absolute w-24 border border-black text-center bottom-4 left-0 right-0 mx-auto uppercase font-serif text-black text-2xs"
    >
      Ponybill.com
    </div>
  </div>
</a>
<style>
  /* .gold {
    border-image: url("/Lanyard.png") 30 30 stretch;
    border: 16px solid url("/Lanyard.png") 30 30 stretch;
  } */

  .black {
    -webkit-backdrop-filter: blur(5px);
    border-color: #000000;
    /* border-image: url("/wood.jpg") 30 30 stretch;
    border: 16px solid url("/wood.jpg") 30 30 stretch; */
  }

  .playbill {
    width: auto;
    margin-left: auto;
    margin-right: auto;
    --a: 0.5deg; /* control the angle of rotation (the smaller, the better) */
    transform: perspective(400px)
      rotate3d(var(--r, 1, -1), 0, calc(var(--i, 1) * var(--a)));
    -webkit-mask: linear-gradient(135deg, #000c 40%, #000, #000c 60%) 100% 100%/250%
      250%;
    transition: 0.4s;
    /* animation:
      jump 1.2s cubic-bezier(0.77, 0.01, 0.25, 1) 2s forwards,
      rotating 4s var(--sine) 0s infinite forwards; */

    z-index: 50;
  }

  .playbill:hover {
    --i: -1;
    -webkit-mask-position: 0 0;
  }

  a {
    -moz-user-select: -moz-none;
    -khtml-user-select: none;
    -webkit-user-select: none;

    -ms-user-select: none;
    user-select: none;
  }
</style>
