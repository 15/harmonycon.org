<a class={`flex flex-col gap-y-1 lg:gap-y-2 duration-300 ${idx % 2 ? 'rotate-1 hover:rotate-3 ' : '-rotate-1 hover:-rotate-3 '} ${active ? 'grayscale-0 cursor-pointer' : 'grayscale cursor-not-allowed'} hover:scale-[1.05]`} href={active ? href : ''}>
  <div
    class="relative w-80 max-w-80 min-w-80  flex flex-col items-center justify-center rounded border-2 border-black"
  >
  <!-- <div
    class="flex flex-col leading-snug gap-y-0.5 text-center justify-center mt-2 absolute bg-yellow-200 w-full py-2 bottom-0"
  >
    <div class="text-base text-black">Playbill</div>
  </div> -->
    <img src="/Playbill_logo.svg" />
    <Image
      src={src}
      width="400"
      alt=""
      class="h-92 object-cover object-top"
    />
  </div>
</a>