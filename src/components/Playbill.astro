---
import { Image } from "astro:assets";
const { src, href, idx, active, title="Ponybill"} = Astro.props;
import ponybill from "../assets/2025/ponybill.png";

const isLeft = [1, 3, 6, 8].includes(idx);
const borderType = ['_', 'wood', 'black', 'wood2', 'wood4', 'wood2', 'wood4', 'wood', 'black'][idx];
// const borderType = ['gold', 'black'][idx % 2];
---

<a style="filter: drop-shadow(0 3px 3px #000);" class={` ${borderType} bg-[#fff] p-4 rounded border-[10px] w-full items-center flex flex-col gap-y-1 lg:gap-y-2 duration-300 ${isLeft ? 'rotate-1 hover:rotate-3 ' : '-rotate-1 hover:-rotate-3 '} ${active ? 'grayscale-0 cursor-pointer' : 'grayscale cursor-not-allowed'} hover:scale-[1.05] hover:z-[100] relative`} href={active ? href : ''}>
  <div
    style="filter: drop-shadow(0 1px 1px #000);"
    class={`w-80 relative flex flex-col rounded ${active ? 'grayscale-0' : 'grayscale'}`}
  >
  <!-- <div
    class="flex flex-col leading-snug gap-y-0.5 text-center justify-center mt-2 absolute bg-yellow-200 w-full py-2 bottom-0"
  >
    <div class="text-base text-black">Playbill</div>
  </div> -->
    <!-- <img src="/Playbill_logo.svg" /> -->
    <!-- <Image
      src={ponybill}
      height="200"
      class="w-full"
      alt=""
    /> -->
    <div class="bg-yellow-200 w-full h-16 font-serif uppercase flex items-center justify-center text-5xl">
      { title }
    </div>
    <Image
      src={src}
      height="500"
      alt=""
      class="w-80 h-[35vh] object-cover object-top"
    />
  </div>
</a>
<style>
  .gold {
    border-image: url("/Lanyard.png") 30 30 stretch;
    border: 16px solid url("/Lanyard.png") 30 30 stretch;
  }

  .black {
    -webkit-backdrop-filter: blur(5px);
    border-color: 	#000000;
    /* border-image: url("/wood.jpg") 30 30 stretch;
    border: 16px solid url("/wood.jpg") 30 30 stretch; */
  }

  .wood2 {
    border-image: url("/dark_wood.jpg") 30 30 stretch;
    border: 16px solid url("/dark_wood.jpg") 30 30 stretch;
  }

  .wood {
    border-image: url("/wood.jpg") 30 30 stretch;
    border: 16px solid url("/wood.jpg") 30 30 stretch;
  }

  .wood3 {
    border-image: url("/light_wood.jpg") 30 30 stretch;
    border: 16px solid url("/light_wood.jpg") 30 30 stretch;
  }

  .wood4 {
    border-image: url("/lighter_wood.jpg") 30 30 stretch;
    border: 16px solid url("/lighter_wood.jpg") 30 30 stretch;
  }

  .wood5 {
    border-image: url("/lightest_wood.jpg") 30 30 stretch;
    border: 16px solid url("/lightest_wood.jpg") 30 30 stretch;
  }
</style>