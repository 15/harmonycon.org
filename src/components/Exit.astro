---
import { Image } from "astro:assets";
import exit from "../assets/2025/exit.png";
---

<div class="fixed md:absolute top-2 left-2 md:top-12 md:left-12 z-50">
  <a
    href="/main"
    class="opacity-60 hover:opacity-100 duration-500 flex items-center justify-center"
  >
    <Image
      src={exit}
      id="exit"
      alt="Back"
      width={200}
      format="avif"
      class="border-4 border-green-300 w-32 md:w-48 h-auto rounded-lg"
    />
  </a>
</div>

<style>
  #exit {
    --a: 8deg; /* control the angle of rotation (the smaller, the better) */
    transform: perspective(400px)
      rotate3d(var(--r, 1, -1), 0, calc(var(--i, 1) * var(--a)));
    /* -webkit-mask: 
    linear-gradient(135deg,#000c 40%,#000,#000c 60%)
    100% 100%/250% 250%; */
    transition: 0.4s;
    animation:
      jump 1.2s cubic-bezier(0.77, 0.01, 0.25, 1) 2s forwards,
      rotating 4s var(--sine) 0s infinite forwards;
  }

  #exit:hover {
    --i: -1;
    -webkit-mask-position: 0 0;
  }
</style>
