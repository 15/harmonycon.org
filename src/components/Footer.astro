</footer>

<style>
  :root {
    --sine: linear(
      0,
      0.007 5.35%,
      0.0282 10.75%,
      0.0638 16.26%,
      0.1144 21.96%,
      0.1833 28.16%,
      0.2717 34.9%,
      0.6868 62.19%,
      0.775 68.54%,
      0.8457 74.3%,
      0.9141 81.07%,
      0.9621 87.52%,
      0.9905 93.8%,
      1
    );
  }

  a {
    @apply font-serif;
  }

  .glass {
    background: rgba(255, 255, 255, 0);
    box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
    backdrop-filter: blur(5px);
    -webkit-backdrop-filter: blur(5px);
    border: 1px solid rgba(255, 255, 255, 0.3);
  }

  @keyframes floating {
    0% {
      transform: translate(0, 0) rotate(2deg);
    }
    50% {
      transform: translate(0, -3px) rotate(-2deg);
    }
    100% {
      transform: translate(0, 0) rotate(2deg);
    }
  }

  .fade {
    opacity: 0;
    animation: fadeIn 1.2s cubic-bezier(0.77, 0.01, 0.25, 1) 2.8s forwards;
  }

  @keyframes fadeIn {
    0% {
      opacity: 0;
    }
    50% {
      opacity: 1;
    }
    100% {
      opacity: 1;
    }
  }
</style>
