---
import { Image, getImage } from "astro:assets";
const { src, name, title, tier } = Astro.props;
---
<div class={`flex flex-col items-center ${tier === 1 ? 'gap-y-2' : tier === 2 ? 'gap-y-1' : 'gap-y-0'}`}>
  {tier === 1 ? <Image src={src} alt={name} width={200} format="avif" class={`${tier === 1 ? 'w-32 md:w-48' : tier === 2 ? 'w-24 md:w-32' : 'w-12 md:w-16'} rounded-full ${tier === 1 ? 'border-4' : tier === 2 ? 'border-2' : 'border'} border-[#c4a128]`} /> : null}
  <div class={`font-bold whitespace-nowrap ${tier === 1 ? 'text-4xl' : tier === 2 ? 'text-3xl' : 'text-lg'}`} style="text-shadow: 2px 2px 1px #000;">
   { name }
  </div>
  <div class={`whitespace-nowrap ${tier === 1 ? 'text-lg' : tier === 2 ? 'text-base' : 'text-xs'}`} style="text-shadow: 2px 2px 1px #000;">
    { title }
  </div>
</div>